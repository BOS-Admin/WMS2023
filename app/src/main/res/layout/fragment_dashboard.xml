<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.dashboard.DashboardFragment">


    <LinearLayout
        android:id="@+id/layoutDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Branch"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnCount"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:background="?attr/colorPrimary"
                android:text="Packing"
                android:textColor="#F6F0F0"
                android:textSize="20sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnStockTake"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="?attr/colorPrimary"
                android:text="Stock Take"
                android:textColor="#F6F0F0"
                android:textSize="20sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnTransfer"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:text="Transfer"
                android:textColor="#F6F0F0"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnPutAway"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:text="Put Away"
                android:textColor="#F6F0F0"
                android:textSize="20sp"
                android:visibility="gone"/>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>