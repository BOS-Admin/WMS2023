<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:padding="3dp"
    android:id="@+id/layoutOldPrice"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_corner_green"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:text=""
    >
    <TextView
        android:id="@+id/textCompany"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="BRANDS"
        android:textColor="#DF0AD6"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textItemSerial"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textItemNo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
         android:layout_height="50dp">
        <TextView
            android:id="@+id/textNewLBPPrice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="$ 300"
            android:textColor="#E5EC1D"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPrevLBPPrice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="$ 500"
            android:textColor="#1D31EC"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>





    </LinearLayout>


